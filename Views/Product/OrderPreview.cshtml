@using B2C_Ecomerce_Website.Models;
@{
    ViewBag.Title = "OrderPreview";
    if (Session["CustomerID"] != null)
    {
        Layout = "~/Views/Shared/_Logined.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    List<Product> productList = (List<Product>)ViewBag.ProductList;
    int totalBill = 0;
    if (ViewBag.TotalBill != null)
    {
        totalBill = (int)ViewBag.TotalBill;

    }
    if (productList == null)
    {
        productList = new List<Product>();
    }

    string customerEmail = "";
    string customerName = "";
    string customerPhone = "";
    string customerAddress = "";
    if (ViewBag.CustomerInfo != null)
    {
        List<string> customerInfo = (List<string>)ViewBag.CustomerInfo;
        customerEmail = customerInfo[0];
        customerName = customerInfo[1];
        customerPhone = customerInfo[2];
        customerAddress = customerInfo[3];
    }

    int counter = 0;

    string customerId = "";
    if (Session["CustomerID"] != null)
    {
        customerId = Session["CustomerID"].ToString();
    }
    string cartID = "";
}

    <div>
        <h3 class="col-xs-12 text-center">Your cart</h3>
        <div class="col-xs-12 panel panel-default" style="padding: 0;">
            <div class="panel-heading text-center">Product list</div>

            @using (Html.BeginForm("PlaceOrder", "Order", FormMethod.Post))
            {
                <table class="table table-hover">
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Order Quantity</th>
                        <th>Brand</th>
                        <th>Origin</th>
                        <th>Product Size</th>
                    </tr>
                    @foreach (Product product in productList)
                    {
                        if (product != null)
                        {
                            string productIdInfo = "ProductID[" + counter + "]";
                            string productQuantityInfo = "ProductQuantity[" + counter + "]";
                            counter++;
                            <input type="hidden" name="@productIdInfo" value="@product.ProductID" />
                            <input type="hidden" name="@productQuantityInfo" value="@product.ProductQuantity" />
                            <tr>
                                <td>@product.ProductID</td>
                                <td>@product.ProductName</td>
                                <td>@product.ProductPrice</td>
                                <td>@product.ProductQuantity</td>
                                <td>@product.ProductBrand</td>
                                <td>@product.ProductOrigin</td>
                                <td>@product.ProductSize @product.ProductUnitSize</td>
                            </tr>
                        }
                    }
                    <tfoot>
                        <tr>
                            <td class="text-left" style="font-weight: bold">Total</td>
                            <td class="text-left" style="font-weight: bold" colspan="6">@totalBill</td>
                        </tr>
                    </tfoot>
                </table>
                <input type="hidden" name="TotalBill" value="@totalBill" />
                <input class="text-box single-line" name="CartID" type="hidden" value="@cartID" required="required" />
                <div class="editor-field text-center" style="margin-bottom: 10px">
                    <label for="customerid">Full name</label>
                    <input class="text-box single-line" id="CustomerName" name="CustomerName" type="text" value="@customerName" required="required" />
                </div>
                <div class="editor-field text-center" style="margin-bottom: 10px">
                    <label for="customerid">Phone number</label>
                    <input class="text-box single-line" id="CustomerPhone" name="CustomerPhone" type="text" value="@customerPhone" required="required" />
                </div>
                <div class="editor-field text-center" style="margin-bottom: 10px">
                    <label for="EmailInput">Email</label>
                    <input class="text-box single-line" id="EmailInput" name="EmailInput" type="email" value="@customerEmail" required="required" />
                </div>
                <div class="editor-field text-center" style="margin-bottom: 10px">
                    <label for="CustomerAddress">Address</label>
                    <input class="text-box single-line" id="CustomerAddress" name="CustomerAddress" type="text" value="@customerAddress" required="required" />
                </div>
                <div class="editor-field text-center" style="margin-bottom: 10px">
                    <label for="PaymentMethodSelection">Payment method</label>
                    <select id="PaymentMethod" name="PaymentMethod" required="required">
                        <option value="Cash">Cash</option>
                        <option value="iBanking">iBanking</option>
                        <option value="VNPay">VNPay</option>
                    </select>
                </div>
                <div class="text-center">
                    <input type="submit" value="Order" class="btn btn-primary text-center" />
                </div>
            }
        </div>
    </div>
